<!DOCTYPE HTML>
<html>
	<head>
		<meta charset="UTF-8">
		<title>Unition</title>
		<link rel="shortcut icon" type="image/png" href="./public/favicon.ico">
		<link href="./public/styles/<%= user.style %>.css" rel="stylesheet">
		<script type="text/javascript">
			function submitproject()
			{
			document.forms["projectform"].submit();
			}
			
			function loadAdmin()
			{
			document.forms["loadAdmin"].submit();
			}
			
			function submitcharts()
			{
			document.forms["opencharts"].submit();
			}
			
			function createProject()
			{
			document.forms["createProject"].submit();
			}
			
			function toggleAnnouncement() {
				  var x = document.getElementById("announcements");
				  if (x.style.display === "none") {
					x.style.display = "inline";
				  } else {
					x.style.display = "none";
				  }
			}
			
			function toggleUsers() {
				  var x = document.getElementById("users");
				  if (x.style.display === "none") {
					x.style.display = "table";
				  } else {
					x.style.display = "none";
				  }
			}
			
			function toggleBoard() {
				  var x = document.getElementById("projectBoard");
				  if (x.style.display === "none") {
					x.style.display = "table";
				  } else {
					x.style.display = "none";
				  }
			}
			
			function toggleMyProjects() {
				  var x = document.getElementById("myProjects");
				  if (x.style.display === "none") {
					x.style.display = "table";
				  } else {
					x.style.display = "none";
				  }
			}
		</script>
		<script defer src="./node_modules/@fortawesome/fontawesome-free/js/brands.js"></script>
		<script defer src="./node_modules/@fortawesome/fontawesome-free/js/solid.js"></script>
		<script defer src="./node_modules/@fortawesome/fontawesome-free/js/fontawesome.js"></script>

	</head>
	
	<body>
	
	 <div class="container" style='height: 100%;'>

		<div class="cardTeams" style="width: 75px;">
			<div class="header">
			  <img type="image/png" src="./public/unitionSmall.png" style="margin-top:20px; display: block;" class="unitionSmall">
			</div>
			<div class="body">
			  <ul>
				<li><a href="./home"><i class="fas fa-home icon"></i></a></li>
				<li><a href='./projects'><i class="fas fa-stream icon"></i></a></li>				
				<li><a href='./adminPage'><i class="fas fa-wrench icon"></i></a></li>
				<li><a href="./forms"><i class="fab fa-wpforms icon"></i></a></li>
				<li><form id="opencharts" action="/openCharts" method="post"><a href="javascript: submitcharts()"><i class="fas fa-chart-pie icon"></i></a></form></li>
				<li><a href="./campaigns"><i class="fas fa-flag icon"></i></a></li>
				<li><a href="./teams"><i class="fas fa-users icon"></i></a></li>

				<li><a href="./documentation"><i class="fas fa-book icon"></i></a></li>
				
				<li><a href="/profile"><i class="fas fa-user" ></i></a>
			  </ul>
			</div>
		</div>
		
		<div class="card" style="width: 170px;">
			
			<div class="body" style="height:80%;">

				<%- teamsList %>
			<br>
			<br>
			<form action="/deliverJoinTeam" method="post">
				<input class="teamTitle" type="submit" value="+Join Team">
			</form>

			<form action="/deliverCreateTeam" method="POST">
				<input class="teamTitle" type="submit" value="+Create Team">
			</form>
			
			</div>
			<div class="ender">

			</div>
			
		</div>
  
  	<div class="main">
	<div class="topRow" style="background-color: #32323e; height: 50px;">
				<table style="width: 100%; height: 100%;" class="toolTable">
			<tr>
			<td><div onclick='createProject()' title='Create Team Project' style='cursor: pointer;'><i class="fas fa-folder-plus" style="color: white;"></i></div></td>
			<td><div onclick='toggleAnnouncement()' title='Toggle Announcements' style='cursor: pointer;'><i class="fas fa-bullhorn" style="color: white;"></i></div></td>
			<td><div onclick='toggleUsers()' title='Toggle Users' style='cursor: pointer;'><i class="fas fa-users" style="color: white;"></i></div></td>
			<td><div onclick='toggleBoard()' title='Toggle Project Board' style='cursor: pointer;'><i class="fas fa-chalkboard-teacher" style="color: white;"></i></div></td>
			<td><div onclick='toggleMyProjects()' title='Toggle My Projects' style='cursor: pointer;'><i class="fas fa-clipboard-check" style="color: white;"></i></div></td>
			<td><a href="/profile"><i class="fas fa-user" style="color: white;"></i></a></td>
			<td><a href="/profile"><i class="fas fa-user" style="color: white;"></i></a></td>
			<td><a href="/profile"><i class="fas fa-user" style="color: white;"></i></a></td>
			<td><a href="/profile"><i class="fas fa-user" style="color: white;"></i></a></td>
			<td><a href="/profile"><i class="fas fa-user" style="color: white;"></i></a></td>
			</tr>
			</table>
			
	</div>
	<div class="dataRow">
          <%- statusMessage %>
	</div>
	</div>


</div>
		
	</body>
</html>