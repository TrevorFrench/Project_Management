			</form>
				<a href="/profile" class="profileButton" style="display:flex; float:right;"><i class="fas fa-user" height=45></i></a>
			<br>
			<br>

	<table class="styled-table">
	<tbody>
	<tr><th>Name</th><th>Start Date</th><th>End Date</th><th>Resource</th><th>Percent Complete</th><th>Action</th></tr>
	<%- statusMessage %>
