</div>
				<script>
var ctx = document.getElementById('myChart').getContext('2d');
var myChart = new Chart(ctx, {
    type: 'bar',
    data: {
			<%- statusMessage %>,
            backgroundColor: [
                'rgba(255, 99, 132)',
				'rgba(255, 99, 132)',
				'rgba(255, 99, 132)',
				'rgba(255, 99, 132)',
				'rgba(255, 99, 132)'
            ]
        }]
    },
    options: {
		scales: {
            yAxes: [{
                ticks: {
                    beginAtZero: true
                }
            }]
        }
    }
});
</script>
